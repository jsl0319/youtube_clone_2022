extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST") 
        input(type="text" name = 'name' placeHolder="Name" value=loggedInUser.name required)
        input(type="email" name = 'email' placeHolder="E-mail" value=loggedInUser.email required)
        input(type="text" name = 'userName' placeHolder="User Name" value=loggedInUser.userName required)
        input(type="text" name = 'location' placeHolder="Location" value=loggedInUser.location required)
        input(type="submit", value="Edit User")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;