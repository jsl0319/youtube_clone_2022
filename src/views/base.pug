doctype html
html(lang="en")
    head
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        script(src="https://kit.fontawesome.com/b280fc7aa7.js" crossorigin="anonymous") 
        title #{pageTitle} | Wetube
    body
        header 
            h1 #{pageTitle}
            nav 
                ul 
                    li 
                        a(href="/") Home
                    li 
                        a(href="/search") Search 
                    if loggedIn
                        li 
                            a(href="/videos/upload") Upload Video 
                        li 
                            a(href=`/users/${loggedInUser._id}`) Profile
                        li 
                            a(href="/users/logout") Log out
                    else 
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Log in
        main 
            block content
        include partials/footer.pug