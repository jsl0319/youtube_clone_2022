extends base.pug

block content
    if errorMessage
        span #{errorMessage}
    form(method="POST" action="/login") 
            input(type="text" name="userName" placeHolder="User name" required)
            input(type="password" name="password" placeHolder="Password" required)
            input(type="submit" value="Login")
            br
            div 
                a(href="/users/github/start") 
                    i.fa.fa-github 
                        span Login with Github
            div             
                a(href="/users/kakao/start")         
                    i.fa.fa-k
                        span Login with KaKao
            div             
                a(href="/users/naver/start")         
                    span Login with Naver
    hr
    div 
    span Don't have account?
    a(href="/join") Create one now &rarr; 
